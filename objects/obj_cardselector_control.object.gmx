            <string>///animation stage checks
switch(AnimationStage){
    case 0://bring black background
        if x &gt; (-view_wview[0]/4*3){
            AnimationStage=1
        }
    break;
    case 1://create the cards
        var sepx=view_wport[0]/(HorCardsMax+1)
        var sepy=400
        var xi=0;
        var yi=0;
        for(var i=0;i&lt;ds_list_size(cardlist);i++){
            var _child=instance_create(0,0,obj_cardselection);
            ds_list_add(Objlist,_child)//add to obj list
            _child.CardID=cardlist[| i]
            _child.tgtx = sepx+sepx*xi;
            _child.tgty = 250+sepy*yi;
            _child.Parent=id
            //add to variable
            xi++
            if xi&gt;(HorCardsMax-1){xi=0;yi++}
        }
        AnimationStage=2
    break;
    case 3://pack up all
        backtgtx=-view_wview[0]
        for(var i=0;i&lt;ds_list_size(Objlist);i++){
            Objlist[| i].tgtx=-200
        }
        if abs(x-backtgtx)&lt;0.1{
            AnimationStage=4
        }
    break;
    case 4://destroy
        for(var i=0;i&lt;ds_list_size(Objlist);i++){
            with(Objlist[| i]){instance_destroy()}
        }
        instance_destroy()
    break;
}

//keep background
x=lerp(x,backtgtx,0.2)

if AnimationStage&lt;3{
    //scrolling
    var amt=5
    scrollbarY=lerp(scrollbarY,scrolamt,0.6)
    if mouse_wheel_down(){
        if scrolamt&gt;(-((ds_list_size(Objlist) div HorCardsMax)*8)){//idk what this mean but it works :/
            scrolamt--
        }
    }
    if mouse_wheel_up(){
        if scrolamt&lt;0{
            scrolamt++
        }
    }
    for(var i=0;i&lt;ds_list_size(Objlist);i++){
        Objlist[| i].y+=scrolamt*amt
    }
    //selection
    if SelectedCardID&gt;0{
        AnimationStage=3
    }
    //exit out of gui
    if keyboard_check_pressed(vk_escape){
        AnimationStage=3
    }
}
</string>
