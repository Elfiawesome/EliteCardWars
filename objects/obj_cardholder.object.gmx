}
if Stats[? "IsImmune"]&gt;0{
    draw_sprite_ext(spr_statuseffect,3,_x,_y+_offset,_sc,_sc,0,c_white,1);_offset+=_height
}
if Stats[? "IsSPImmune"]&gt;0{
