if ShakeAmt&gt;0{
    x=Shakex+random_range(-ShakeAmt,ShakeAmt)
    y=Shakey+random_range(-ShakeAmt,ShakeAmt)
    ShakeAmt-=0.5
    if ShakeAmt&lt;=0{
        ShakeAmt=0;
        x=Shakex
        y=Shakey
    }
}else{
    Shakex=x
    Shakey=y
}
