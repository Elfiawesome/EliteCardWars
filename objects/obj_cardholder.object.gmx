}
if Stats[? "IsBAImmune"]&gt;0{
    draw_sprite_ext(spr_statuseffect,5,_x,_y+_offset,_sc,_sc,0,c_white,1);_offset+=_height
}
if global.NetworkObj.socket_to_instanceid[? mysocket].Hero.Stats[? "ForceAttackHolder"]=Pos{
    draw_sprite_ext(spr_statuseffect,6,_x,_y+_offset,_sc,_sc,0,c_white,1);_offset+=_height
