var _y=yscale*(y-view_yview[0])
var _x2=xscale*(pointx-view_xview[0])
var _y2=yscale*(pointy-view_yview[0])
draw_curve(_x,_y,_x2,_y2,100,5,10)
draw_set_colour(c_white)
}

