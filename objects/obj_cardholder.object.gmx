            <string>///draw card
if CardID=0{
    if global.SelectedCard!=noone{
        var D=false
        if global.SelectedCard.CardType=0{D=true}
        if global.SelectedCard.CardType=1 &amp;&amp; global.SpellDat_SpellCastType[global.SelectedCard.CardID]=SpellCastType.UnitTarget{D=true}
        if !D{exit;}
        image_alpha=(sin(current_time/100)+1)/2
        draw_set_color(TeamColorOf(global.NetworkObj.socket_to_instanceid[? mysocket].Team))
        draw_set_alpha(image_alpha*0.7)
        draw_rectangle(
            x-sprite_get_width(sprite_index)*image_xscale/2,
            y-sprite_get_height(sprite_index)*image_yscale/2,
            x+sprite_get_width(sprite_index)*image_xscale/2,
            y+sprite_get_height(sprite_index)*image_yscale/2,
            false
        )
        draw_set_alpha(1)
        draw_set_color(c_white)
        //draw_self()
        image_alpha=1
    }
}

if CardID=0{exit;}
var alpha=1;
if Stats[? "AtkLeft"]=0{alpha=0.6}

//draw background card
draw_primitive_begin(pr_trianglestrip);
draw_set_alpha(alpha/2)
var _ext=6
var _extm=_ext/3
var _w=sprite_get_width(sprite_index)/2*image_xscale + (_ext+_extm);
var _h=sprite_get_height(sprite_index)/2*image_yscale + (_ext+_extm);
draw_set_color(TeamColorOf(global.NetworkObj.socket_to_instanceid[? mysocket].Team))
var _swm=SinWaveTimeModifier
var _sf1=sin(current_time/200*_swm) * _ext
var _sf2=sin(current_time/800*_swm) * _ext
var _sf3=sin(current_time/500*_swm) * _ext
var _sf4=sin(current_time/600*_swm) * _ext
var _a=-degtorad(image_angle);
var _cw=_w + _sf1; var _ch=_h + _sf2;draw_vertex(x+_cw*cos(_a)-_ch*sin(_a) ,  y+_ch*cos(_a)+_cw*sin(_a))
var _cw=_w + _sf2; var _ch=_h + _sf1;draw_vertex(x-_cw*cos(_a)-_ch*sin(_a) ,  y+_ch*cos(_a)-_cw*sin(_a))
var _cw=_w + _sf3; var _ch=_h + _sf4;draw_vertex(x+_cw*cos(_a)+_ch*sin(_a) ,  y-_ch*cos(_a)+_cw*sin(_a))
var _cw=_w + _sf4; var _ch=_h + _sf3;draw_vertex(x-_cw*cos(_a)+_ch*sin(_a) ,  y-_ch*cos(_a)-_cw*sin(_a))
draw_set_color(c_white)
draw_set_alpha(1)
draw_primitive_end()
//draw Card
draw_sprite_ext(sprite_index,image_index,x,y,image_xscale,image_yscale,image_angle,c_white,alpha)
//drawing cooldown
if Stats[? "AbilityCooldownMax"]&gt;0{
var wid=sprite_get_width(sprite_index)*image_xscale
var hei=sprite_get_height(sprite_index)*image_yscale

var _cooldownmax=Stats[? "AbilityCooldownMax"]//+MultiStats_GetSum(Stats[? "Multi_AbilityCooldownMaxAmt"],Stats[? "Multi_AbilityCooldownMaxDuration"])
var _Maxamt=clamp(Stats[? "AbilityCooldown"],0,_cooldownmax)
var proportion = (_Maxamt/_cooldownmax)
var _bsize=hei/_cooldownmax
var newhei=hei*proportion
Visual_CooldownY = lerp(Visual_CooldownY,newhei,0.15)

for(var i=0;i&lt;_cooldownmax;i++){
    draw_line_width(
        x+wid/2+10,
        y+hei/2 - i*_bsize,
        x+wid/2+20,
        y+hei/2 - i*_bsize,
        2
        )
}

draw_set_alpha(0.2)
draw_set_color(c_white)
draw_rectangle(//back rectangle
    x+wid/2+10,
    y+hei/2,
    x+wid/2+15,
    y-hei/2,
false)
draw_set_alpha(0.4)
draw_set_color(c_black)
draw_rectangle(//front rectangle
    x+wid/2+10,
    y+hei/2,
    x+wid/2+20,
    y-hei/2+Visual_CooldownY,
false)
draw_set_alpha(1)
draw_set_color(c_white)
}

//draw details
draw_set_font(ft_Ebrima_Standard_Bold)
draw_set_alpha(1)
draw_set_halign(fa_center)
draw_set_valign(fa_middle)
var _t=Stats[? "Finalized_Hp"]
var _x=x-sprite_get_width(sprite_index)*image_xscale/2
var _y=y-sprite_get_height(sprite_index)*image_yscale/2
var _rad=30//max(string_height(_t),string_width(_t))/2*1.33
draw_quad_vector(sprite_get_texture(spr_CardValBackground,0),
    _x-_rad-5,_y,
    _x,_y-_rad-5,
    _x,_y+_rad+5,
