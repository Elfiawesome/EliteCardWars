if CardID!=0{
    sprite_index=global.UnitDat_Sprite[CardID]
    image_index=global.UnitDat_Image[CardID]
    if IsSelected || IsSelected_Ability{
        image_xscale=0.2+(sin(current_time/100)/100)
        image_yscale=0.2+(sin(current_time/100)/100)
    }else{
        image_xscale=0.2
